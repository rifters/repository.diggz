<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.diggzwizard" name="Diggz Wizard" version="3.5" provider-name="Diggz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Diggz Wizard</summary>
    <description lang="en">Use this to install and update Diggz builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.ustvnow.tva" name="USTVnow Plus" provider-name="mhancoc7" version="14.6.6">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.ustvnow.plus.guide" version="1.1.8" />
    </requires>
    <extension library="main.py" point="xbmc.python.pluginsource">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Watch Major American Television Networks Live for Free!</summary>
        <description>Please visit https://www.tvaddons.ag for addon support! Watch Major American Television Networks Live! Entirely Legal and Free! You can also record content with a paid DVR account or by using DVR referral points. Signup for a free account through the following link today: http://watch.ustvnow.com </description>
        <platform>all</platform>
        <forum>https://forums.tvaddons.ag/ustvnow-plugin-for-kodi/</forum>
        <website>https://ustvnow.tvaddons.ag/</website>
    </extension>
</addon>

<addon id="repository.diggz" name="Diggz Repo" version="1.2" provider-name="J Diggz">
	<extension point="xbmc.addon.repository" name="Diggz Repo">
		<dir>
			<info compressed="false">https://raw.githubusercontent.com/noobsandnerds/modules4all/master/zips/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/noobsandnerds/modules4all/master/zips/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/noobsandnerds/modules4all/master/zips/</datadir>
		</dir>
		<info compressed="false">https://raw.githubusercontent.com/jdig4240/repository.diggz/master/zips/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/jdig4240/repository.diggz/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/jdig4240/repository.diggz/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Repo for Diggz </summary>
		<description lang="en">Update and install Diggz builds</description>
		<genre></genre>
	</extension>
</addon>

<addon id="script.ustvnow.plus.guide" name="USTVnow Guide" version="1.2.7" provider-name="mhancoc7">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
	<import addon="script.module.simplejson" version="3.3.0"/>
	<import addon="plugin.video.ustvnow.tva" version="14.3.8" optional="true" />
     </requires>
     <extension point="xbmc.python.script" library="addon.py">
         <provides>executable video</provides>
     </extension>
     <extension point="xbmc.service" library="service.py" start="login" />
     <extension point="xbmc.addon.metadata">
         <description lang="en">Please visit https://www.tvaddons.ag for addon support! The USTVnow Guide provides an EPG for the USTVnow Plus addon. Signup for a free account through the following link today: http://watch.ustvnow.com</description>
         <disclaimer lang="en">The USTVnow Guide is based on the FTV Guide by rayw1986 and bluezed which is based on the original TV Guide addon by twinther.</disclaimer>
         <platform>all</platform>
         <license>GPLv2</license>
         <forum>https://forums.tvaddons.ag/ustvnow-plugin-for-kodi/</forum>
         <website>https://ustvnow.tvaddons.ag/</website>
         <website></website>
     </extension>
</addon>
</addons>
